<% was_validated = comment.errors.any? %>

<%= form_with(model: comment, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for body start -->
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = comment.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_area :body, class: body_class, placeholder: "Enter body" %>
    <!-- Input for body end -->
    <% if body_was_invalid %>
      <% comment.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for body end -->
  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <% commenter_id_class = "form-control" %>
    <% commenter_id_was_invalid = comment.errors.include?(:commenter_id) %>

    <% if was_validated %>
      <% if commenter_id_was_invalid %>
        <% commenter_id_class << " is-invalid" %>
      <% else %>
        <% commenter_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :commenter_id %>
    <!-- Input for commenter_id start -->
    <%= f.select :commenter_id, options_from_collection_for_select(User.all, :id, :to_s, @comment.commenter_id), {}, class: "form-control" %>
    <!-- Input for commenter_id end -->
    <% if commenter_id_was_invalid %>
      <% comment.errors.full_messages_for(:commenter_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for commenter_id end -->
  <!-- Label and input for photo_id start -->
  <div class="form-group">
    <% photo_id_class = "form-control" %>
    <% photo_id_was_invalid = comment.errors.include?(:photo_id) %>

    <% if was_validated %>
      <% if photo_id_was_invalid %>
        <% photo_id_class << " is-invalid" %>
      <% else %>
        <% photo_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo_id %>
    <!-- Input for photo_id start -->
    <%= f.number_field :photo_id, class: photo_id_class, placeholder: "Enter photo" %>
    <!-- Input for photo_id end -->
    <% if photo_id_was_invalid %>
      <% comment.errors.full_messages_for(:photo_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for photo_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
