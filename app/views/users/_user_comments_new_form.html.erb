<%= form_with(model: @comment, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :commenter_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :photo_id %>
    <%= f.select :photo_id, options_from_collection_for_select(Photo.all, :id, :to_s, @comment.photo_id), {}, class: "form-control" %>
  </div>

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
